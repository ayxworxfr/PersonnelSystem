@model IEnumerable<PersonnelSystem.Models.Course>

@{
    ViewBag.Title = "Index";
}


<br />
<div class="row">
    <div class="col-lg-6 col-lg-offset-5">
        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default" onclick="window.location.href = 'Create'">Create</button>
            <button type="button" class="btn btn-default" onclick="window.location.href = 'FindCourse'">Find</button>
        </div>
    </div>
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccruedCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttendedCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseRemark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccruedCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendedCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseRemark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                <span class="label label-info">@Html.ActionLink("Edit", "Edit", new { id = item.CourseCode })</span>
                <span class="label label-info">@Html.ActionLink("Details", "Details", new { id = item.CourseCode })</span>
                <span class="label label-danger">@Html.ActionLink("Delete", "Delete", new { id = item.CourseCode })</span>
            </td>
        </tr>
    }

</table>
