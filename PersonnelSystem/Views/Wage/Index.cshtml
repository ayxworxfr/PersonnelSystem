@model IEnumerable<PersonnelSystem.Models.Wage>

@{
    ViewBag.Title = "Index";
}


<br />
<div class="row">
    <div class="col-lg-6 col-lg-offset-5">
        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default" onclick="window.location.href = 'Create'">Create</button>
            <button type="button" class="btn btn-default" onclick="window.location.href = 'FindWage'">Find</button>
        </div>
    </div>
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BasicWage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subsidise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AwardMoney)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinedMoney)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinalWage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position.Position1)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BasicWage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subsidise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwardMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinedMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalWage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Position1)
            </td>
            <td>
                <span class="label label-info">@Html.ActionLink("Edit", "Edit", new { id = item.WageId })</span>
                <span class="label label-info">@Html.ActionLink("Details", "Details", new { id = item.WageId })</span>
                <span class="label label-danger">@Html.ActionLink("Delete", "Delete", new { id = item.WageId })</span>
            </td>
        </tr>
    }

</table>
